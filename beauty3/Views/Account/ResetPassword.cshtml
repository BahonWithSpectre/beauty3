@model beauty3.ViewModels.AccountViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}
<link href="~/css/register.css" rel="stylesheet">

<div class="header">
    <a class="logo" href="/Account/Profil">
        <img src="~/img/logo.png" alt="BeautyOnline">
    </a>
    <a href="/Account/Profil" class="login">
        <span>Жеке кабинет</span>
        <i class="fa fa-user"></i>
    </a>
</div>
<div class="content">
    <form class="vhod" asp-action="ResetPassword">
        <h2>Жүйеге тіркелу</h2>

        <input asp-for="Code" type="hidden" />
        <input id="phone" type="text" asp-for="PhoneNumber" placeholder="Тел. номер" required>
        <span asp-validation-for="PhoneNumber" style="color: red"></span>

        <input type="password" asp-for="Password" placeholder="Жаңа құпиясөз" required>
        <span asp-validation-for="Password" style="color: red"></span>

        <input type="password" asp-for="ConfirmPassword" placeholder="Құпиясөзді қайталаңыз" required>
        <span asp-validation-for="ConfirmPassword" style="color: red"></span>

        <div asp-validation-summary="All" class="text-danger"></div>

        <button type="submit">Тіркелу</button>
    </form>
</div>

<script src="~/js/jquery.maskedinput.min.js"></script>
<script>
    $(document).ready(function () {
        $('#phone').mask('+7 (999) 999 99 99')
    })
</script>