@model beauty3.ViewModels.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}
<link href="~/css/register.css" rel="stylesheet">

<div class="header">
    <a class="logo" href="/Account/Profil">
        <img src="~/img/logo.png" alt="BeautyOnline">
    </a>
    <a href="/Account/Profil" class="login">
        <span>Жеке кабинет</span>
        <i class="fa fa-user"></i>
    </a>
</div>
<div class="content">
    <form class="vhod" asp-action="ForgotPassword">
        <h2>Электронды поштаңызды енгізіңіз</h2>
        <input type="text" asp-for="Email" placeholder="Email" required>
        <span asp-validation-for="Email" style="color: red"></span>

        <button type="submit">Жалғастыру</button>
    </form>
</div>