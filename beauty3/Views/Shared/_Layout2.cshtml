<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - beauty</title>

    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css">

    <script src="~/js/jQuery.js"></script>
</head>
<body>
    <div class="wrap">
        <div class="swipe-menu">
            <div class="close">
                <span></span>
                <!-- <i class="fa fa-close"></i> -->
            </div>
            <a href="#">Басты бет</a>
            <a href="#" class="fix-active">Оқушылар</a>
            <a href="#">Курстар</a>
            <a href="/Account/Profil" class="swipe-login">
                <span>Аккаунт</span>
                <i class="fa fa-user-o"></i>
            </a>
        </div>
        <div class="header">
            <div class="burger">
                <span></span>
            </div>
            <a class="logo" href="/Home/Visitor">
                <img src="~/img/logo.png" alt="BeautyOnline">
                <!-- Beauty Online -->
            </a>
            <div class="login">
                <span>AdminName</span>
                <i class="fa fa-user-o"></i>
                <div class="user-menu">
                    <i class="fa fa-caret-up"></i>
                    <a href="/Home/Visitor" class="cart-show"><i class="fa fa-home"></i>Басты бет</a>
                    <a href="#"><i class="fa fa-cog"></i>Баптаулар</a>
                    <a href="~/Account/Logout"><i class="fa fa-sign-out"></i>Шығу</a>
                </div>
            </div>
        </div>
        <div class="sidebar">
            <a href="/Home/Visitor">Басты бет</a>
            <a href="#" class="fix-active">Оқушылар</a>

            <a href="#">Курстар</a>
            <a>Добавить курс</a>
        </div>

        @RenderBody()

    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.login').click(function () {
                $('.user-menu').slideToggle(300);
            });
            $('.content').click(function () {
                $('.user-menu').slideUp(300);
            });
            $('.fix-active').click(function (e) {
                e.preventDefault();
            });

            $('.burger').hover(function () {
                $('.swipe-menu').toggleClass('active-menu')
            })
            $('.close').click(function () {
                $('.swipe-menu').removeClass('active-menu')
            })
        });
    </script>
</body>
</html>
